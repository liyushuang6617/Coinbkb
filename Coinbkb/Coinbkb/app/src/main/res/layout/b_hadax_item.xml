<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/javabeijing"
    android:paddingLeft="@dimen/size_20"
    android:paddingTop="@dimen/size_15"
    android:paddingRight="@dimen/size_20"
    android:paddingBottom="@dimen/size_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name1"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:background="@drawable/button_fb"
                android:gravity="center"
                android:text="名"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/size_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="名字"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/size_16"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:text="数量 14474"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/edu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_3"
            android:text="24H量 14474"
            android:maxLength="30"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tu"
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:src="@mipmap/zhi" />

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:src="@mipmap/wechat" />

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:src="@mipmap/card" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单价"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/danjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:text="24H量 14474"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_30"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/fabi_button"
            android:text="购买"
            android:textColor="@color/color_text_white"
            android:textSize="@dimen/size_14"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>