<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/size_20"
    android:paddingRight="@dimen/size_20"
    android:paddingTop="@dimen/size_10"
    android:paddingBottom="@dimen/size_10"
    android:id="@+id/titl"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name1"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:gravity="center"
                android:text="名"
                android:textSize="@dimen/size_20"
                android:textColor="@color/color_text_black"
                android:background="@drawable/button_fb"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="名字"
                android:textSize="@dimen/size_16"
                android:textColor="@color/color_text_black"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量 14474"
            android:layout_marginTop="@dimen/size_10"
            android:textSize="@dimen/size_12"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/edu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24H量 14474"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size_3"
            android:textSize="@dimen/size_12"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tu"
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:src="@mipmap/zhi" />

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:src="@mipmap/wechat" />

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:src="@mipmap/card" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|bottom"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单价"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_text_black"/>
        <TextView
            android:id="@+id/danjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24H量 14474"
            android:textSize="@dimen/size_12"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111111228"
            android:layout_marginTop="@dimen/size_5"
            android:textSize="@dimen/size_12"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/bt"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_30"
            android:background="@drawable/fabi_button"
            android:layout_marginTop="@dimen/size_5"
            android:textColor="@color/color_text_white"
            android:textSize="@dimen/size_14"
            android:textStyle="bold"
            android:text="-" />
    </LinearLayout>
</LinearLayout>