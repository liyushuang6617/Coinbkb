<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_20"
    android:background="@color/neibubeijing">
    <LinearLayout
        android:id="@+id/l"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chushou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="@dimen/size_14"
                android:text="出售"/>
            <View
                android:id="@+id/va"
                android:layout_width="@dimen/size_40"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qiugou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14"
                android:text="求购"/>
            <View
                android:id="@+id/va1"
                android:layout_width="@dimen/size_40"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/vv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/l"
        android:background="@color/javabeijing1"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_below="@id/vv"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_text_gray"
            android:text="币种"/>

        <TextView
            android:id="@+id/names"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="请选择币种"
            android:paddingLeft="@dimen/size_15"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14" />
    </LinearLayout>
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll"
        android:background="@color/javabeijing1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_text_gray"
            android:text="请选择支付方式"/>

        <TextView
            android:id="@+id/xuanzhe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_3"
            android:layout_marginBottom="@dimen/size_3"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size_15"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_10"
            android:text="请选择"
            android:background="@color/black"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/javabeijing1"/>
    <LinearLayout
        android:id="@+id/lll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:gravity="center_vertical"
        android:layout_below="@id/v1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_text_gray"
            android:text="单价"/>

        <EditText
            android:id="@+id/danjia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_15"
            android:inputType="number|numberDecimal"
            android:background="@color/neibubeijing"
            android:hint="请输入单价"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14" />
    </LinearLayout>
    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lll"
        android:background="@color/javabeijing1"/>
    <LinearLayout
        android:id="@+id/llll"
        android:layout_below="@id/v2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_1"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_text_gray"
            android:text="数量"/>

        <EditText
            android:id="@+id/nums"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_15"
            android:background="@color/neibubeijing"
            android:hint="请输入数量"
            android:inputType="number|numberDecimal"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14" />
    </LinearLayout>
    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/llll"
        android:background="@color/javabeijing1"/>
    <LinearLayout
        android:id="@+id/lllll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_below="@id/v3"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_text_gray"
            android:text="最小交易量"/>

        <EditText
            android:id="@+id/mins"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/neibubeijing"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_15"
            android:inputType="number|numberDecimal"
            android:hint="请输入最小交易量"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14" />
    </LinearLayout>
    <View
        android:id="@+id/v5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lllll"
        android:background="@color/javabeijing1"/>
    <LinearLayout
        android:id="@+id/llllli"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_marginTop="@dimen/size_15"
        android:layout_below="@id/v5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/size_14"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/blue"
            android:text="下单"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fabu_buton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ListView
            android:id="@+id/listview_buton"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/size_60"
            android:divider="@null"
            android:dividerHeight="@dimen/size_1"
            android:layout_height="@dimen/size_150"/>
    </RelativeLayout>
</RelativeLayout>