<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_20"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16"
            android:text="购买"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/size_5"
            android:textSize="@dimen/size_16"
            android:text="HT"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12"
            android:text="单价"/>
        <TextView
            android:id="@+id/danjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="@dimen/size_12"
            android:text="1000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jiaoyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/size_14"
                android:text="交易金额"/>
            <View
                android:id="@+id/va"
                android:layout_width="@dimen/size_40"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/text_blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shuliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14"
                android:text="交易数量"/>
            <View
                android:id="@+id/va1"
                android:layout_width="@dimen/size_40"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:gravity="center_vertical"
        android:background="@drawable/button_white"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textSize="@dimen/size_14"
            android:inputType="number|numberDecimal"
            android:hint="请输入要购买法币金额"/>
        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:textColor="@color/black"
            android:text="CNY"/>
        <View
            android:layout_width="@dimen/size_0.1"
            android:layout_height="@dimen/size_30"
            android:layout_marginLeft="@dimen/size_3"
            android:layout_marginRight="@dimen/size_3"
            android:background="@color/color_line_gray"/>

        <TextView
            android:id="@+id/all_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/size_14"
            android:textColor="@color/blue"
            android:text="全部买入"/>
    </LinearLayout>

    <TextView
        android:id="@+id/xiane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_14"
        android:textColor="@color/color_text_gray"
        android:text="限额12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:textColor="@color/black"
            android:text="交易总额"/>

        <TextView
            android:id="@+id/nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/blue"
            android:textSize="@dimen/size_14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/quxiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/size_14"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/color_text_gray"
            android:text="取消"/>

        <TextView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/size_14"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/login"
            android:text="下单"/>
    </LinearLayout>
</LinearLayout>