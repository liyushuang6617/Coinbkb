<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/javabeijing"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/size_10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/name1"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:background="@drawable/button_fb"
                android:gravity="center"
                android:text="名"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/size_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="名字"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/size_16"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:text="数量 14474"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:text="最小数量 14474"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/edu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_3"
            android:text="24H量 14474"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tu"
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:src="@mipmap/zhi" />

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:src="@mipmap/wechat" />

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:src="@mipmap/card" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单价"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/danjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:text="24H量 14474"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/fabi_line1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="@dimen/size_3"
                android:paddingRight="@dimen/size_5"
                android:paddingBottom="@dimen/size_3"
                android:text="取消订单"
                android:textColor="@color/color_text_white"
                android:textSize="@dimen/size_12" />

            <TextView
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:background="@drawable/button_blue1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="@dimen/size_3"
                android:paddingRight="@dimen/size_5"
                android:paddingBottom="@dimen/size_3"
                android:text="确认付款"
                android:textColor="@color/color_text_white"
                android:textSize="@dimen/size_12" />

            <TextView
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:background="@color/login"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/size_3"
                android:paddingRight="@dimen/size_10"
                android:paddingBottom="@dimen/size_3"
                android:text="详情"
                android:textColor="@color/color_text_white"
                android:textSize="@dimen/size_12" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>